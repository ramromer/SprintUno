<%- include('../partials/head.ejs')%>

    <body>
        <%- include('../partials/header.ejs')%>
            <main class="margin10px flexContainer centradoxy" id="mainLogin">
                <%- include('../partials/navMenu.ejs')%>
                   
                    <form  autocomplete="off" class="margin10px bgGray flexContainer" id="form-login" action="/users/login" method="POST">
                        <h1 class="margin10px flexContainer centradoxy"> Ingresa a tu cuenta</h1>

                        <div class="flexContainer margin10px centradoxy">
                            <label for="userLogin">Usuario:</label>
                            <input class="textocentrado margin10px"  name="email" autocomplete="off" type="text" id="userLogin" placeholder="email" required pattern="\S+.*"/>
                        </div>
                        <% if (locals.errors && errors.email) { %>
                            <div class="text-danger">
                                <%= errors.email.msg %>
                            </div>
                        <% } %>
                        <div class="flexContainer margin10px centradoxy">
                            <label for="passwordLogin">Contraseña:</label>
                            <input class="textocentrado margin10px"  name="key" autocomplete="off" type="password" id="passworLogin" placeholder="Contraseña"  required/>
                        </div>

                        <a  class="margin10px" href="/users/register">¿Olvisate tu contraseña?</a>
                        
                        <div id="botonesLogin" class="flexContainer  margin10px">
                            <button class="margin10px" type="submit">Entrar</button>
                            <label for="recordarLogin" class="margin10px ">¿Recordarme?</label>
                            <input class="centradoxy" type="checkbox" name="recordarLogin" id="recordarLogin">
                        </div> 
                        
                        <div id="checkboxLogin" class="flexContainer centradoxy margin10px">
                        </div>

                        <div id="btnRegistro" class="flexContainer centradoxy margin10px">
                            <a class="margin10px" href="/users/register">¿Aún no te registras?</a>
                        </div>

                    </form>
                </main>
                <%- include('../partials/footer.ejs')%>
    </body>

</html>