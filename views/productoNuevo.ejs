<%- include('partials/head.ejs')%>

  <body>
    <%- include('partials/header.ejs')%>
      <main>
        <%- include('partials/navMenu.ejs')%>


        <section>
          <form class="flexContainer" id="infoProducto" action="none" method="post">
            <div id="uploadImages" class="flexContainer">
              <label for="avatar">Arrastra y suelta tus imagenes aquí o seleccionalas:</label>
              <input type="file" id="imagenes" name="image" multiple accept="image/*" />
            </div>

            <div id="tituloProductoNuevo" class="flexContainer">
              <label for="nombre"> Nombre del Producto:</label> <input type="text" id="nombre" name="nombre" />
            </div>
            <div class="flexContainer" id="precioProducto">
              <label for="precioNuevo"> Precio:</label> <input type="number" id="precio" name="precio" />
            </div>
            <div class="flexContainer" id="colorProductoNuevo">
              <h4>Color: </h4> <a class="iconCircle red"></a> <a class="iconCircle white"></a><a
                class="iconCircle black"></a>

            </div>
            <div class="flexContainer" id="tamanioProductoNuevo">
              <h4>Tamaño: </h4>
              <div class="iconCircle white">S</div>
              <div class="iconCircle white">M</div>
              <div class="iconCircle white">L</div>
            </div>
            <div class="flexContainer" id="cantidadProductoNuevo">
              <label for="cantidad"> Precio:</label> <input type="number" id="cantidad" name="cantidad" />
            </div>


            <div id="descripcionProductoNuevo">

              <label for="descripcionProductoNuevo"> Descripción:</label> <textarea id="descripcionProductoNuevo" name="descripcionProductoNuevo"> </textarea>

            </div>

        <div id ="containerBtn" class="flexContainer" >
          <button id="btnProductoNuevo">Guardar</button>
        </div>
      </form>

      </section>

    </main>
    <%- include('partials/footer.ejs')%>
  </body>
</html>